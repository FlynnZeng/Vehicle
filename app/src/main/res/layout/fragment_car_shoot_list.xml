<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/car_shoot_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- 日期筛选 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:gravity="center_vertical">

                    <EditText
                        android:id="@+id/edit_start_date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="2025/03/01"
                        android:focusable="false"
                        android:inputType="none"
                        android:padding="12dp"
                        android:background="@drawable/bg_edittext" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="至"
                        android:layout_marginHorizontal="8dp" />

                    <EditText
                        android:id="@+id/edit_end_date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="2025/03/31"
                        android:focusable="false"
                        android:inputType="none"
                        android:padding="12dp"
                        android:background="@drawable/bg_edittext" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- 拍照记录列表容器 -->
            <LinearLayout
                android:id="@+id/shoot_record_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- 以下为一条记录，后续你可使用 RecyclerView 替代 -->

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="12dp">

                        <!-- 缩略图 -->
                        <ImageView
                            android:id="@+id/image_thumb"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/car"
                            android:background="#E8F2FF"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="12dp" />

                        <!-- 文本内容 -->
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/image_thumb"
                            android:layout_alignTop="@id/image_thumb"
                            android:layout_marginEnd="80dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2025-03-30 10:35" android:textStyle="bold"/>
                            <TextView      android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:text="京A12345 | 张明" />
                            <TextView      android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:text="客户拜访" android:textColor="#888888" />

                            <!-- 标签 -->
                            <TextView       android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="出车前"
                                android:background="@drawable/bg_tag"
                                android:textColor="@color/primary"
                                android:textSize="12sp"
                                android:paddingHorizontal="8dp"
                                android:paddingVertical="4dp"
                                android:layout_marginTop="4dp"
                                android:layout_gravity="start" />
                        </LinearLayout>

                        <!-- 查看按钮 -->
                        <Button
                            android:id="@+id/btn_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="查看"
                            android:textColor="@android:color/white"
                            android:backgroundTint="@color/primary"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"/>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
